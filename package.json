{
  "name": "htn-ai",
  "version": "1.1.2",
  "description": "TypeScript Hierarchical Task Network (HTN) planner for game AI, inspired by FluidHTN",
  "type": "module",
  "source": "src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "unpkg": "./dist/index.global.js",
  "scripts": {
    "build": "tsup",
    "lint": "eslint . --max-warnings=0",
    "test": "tsx --tsconfig tsconfig.tests.json node_modules/uvu/bin.js tests",
    "test:coverage": "c8 --check-coverage --lines 85 --reporter=html --reporter=text tsx --tsconfig tsconfig.tests.json node_modules/uvu/bin.js tests",
    "test:report": "c8 report --reporter=text-lcov > coverage/tests.lcov",
    "test:watch": "chokidar \"**/*.ts\" -c \"npm test\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TotallyGatsby/GamePlanHTN.git"
  },
  "keywords": [
    "htn",
    "hierarchical-task-network",
    "hierarchical task network",
    "planner",
    "planning",
    "game",
    "game-ai",
    "gamedev",
    "typescript",
    "javascript",
    "ai",
    "ai behaviors",
    "fluidhtn",
    "fluid-htn",
    "orchestration"
  ],
  "author": "Glavin Wiechert",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TotallyGatsby/GamePlanHTN/issues"
  },
  "homepage": "https://github.com/TotallyGatsby/GamePlanHTN#readme",
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@tivac/eslint-config": "^2.4.0",
    "c8": "^7.12.0",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.28.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "tsup": "^8.0.1",
    "tsx": "~3.12.7",
    "typescript": "~5.5.4",
    "uvu": "^0.5.6"
  },
  "dependencies": {
    "loglevel": "^1.8.1"
  }
}
